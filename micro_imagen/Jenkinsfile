pipeline {
    agent any
    tools {
        gradle 'Gradle 7.5.1' 
        dockerTool 'Docker 20.10.21'
     }
    stages {
        stage('Build') {
            steps {
                script{
                sh """
                cd micro_imagen
                gradle build
               """
                }
            }
        }
        stage('test') {
            steps {
                //sh 'gradle docker'
                echo 'test succesfull'
            }
        }
        stage('Build Docker Image') {
            steps {
                sh"""
                cd micro_imagen
                docker build -t micro_imagen:1.0 .
                docker login -u $DOCKER_USER -p $DOCKER_PASSWORD
               """
            
            }
        }
        stage('Push Docker Image') {
            steps {
               
                echo 'succesfull'
            }
        }
    }
}
