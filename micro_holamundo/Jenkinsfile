pipeline {
    agent any
    tools {
        gradle 'Gradle 7.5.1' 
        dockerTool 'Docker 20.10.21'
     }
    stages {
        stage('Build') {
            steps {
                script{
                sh """
                ls -la
                cd micro_holamundo
                ls -la
                gradle build
               """
                }
            }
        }
        stage('test') {
            steps {
                //sh 'gradle docker'
                echo 'test succesfull'
            }
        }
        stage('Build Docker Image') {
            steps {
                sh"""
                cd micro_holamundo
                docker run -v /var/run/docker.sock:/var/run/docker.sock -ti docker
                docker build -t micro_holamundo:1.0 .
                docker images
                docker login -u $DOCKER_USER -p $DOCKER_PASSWORD
               """
            
            }
        }
        stage('Push Docker Image') {
            steps {
               
                echo 'succesfull'
            }
        }
    }
}
