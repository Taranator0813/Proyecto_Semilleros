pipeline {
    agent any
    
    environment {
        gitcommit = "${gitcommit}"
    }
    
    tools {
        gradle 'Gradle 7.5.1' 
        //dockerTool 'Docker 20.10.21' 
     }
   
    stages {
        stage('VerificaciÃ³n SCM') {
          steps {
               checkout scmGit(branches: [[name: '*/master']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/Taranator0813/Proyecto_Semilleros.git']])
            script {
              checkout scm
              sh "git rev-parse --short HEAD > .git/commit-id"  
              gitcommit = readFile('.git/commit-id').trim()
            }
          }  
        }
        stage('Build Gradle') {
            steps {
                script{
                 sh """
                    ls -la
                    cd micro_holamundo
                    ls -la
                    pwd
                    gradle init
                    gradle build
                    """
             
                }
            }
        }
///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////       
      
       stage('Test SonarQube') {
           steps {
              script{
                withSonarQubeEnv('Sonar') {
                    sh """
                    cd micro_holamundo   
                    gradle sonarqube \
                    -Dsonar.projectKey=Sonar \
                    -Dsonar.host.url=http://10.0.143.236:9000 \
                    -Dsonar.login=573477f7c70daa99960ecbc70fc405343233b8e5
                    """
                    }
                }     
            }
        }
        
///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
       
        stage('Build and Push Docker Image') {
            agent {
               label "slave"
            } 
            steps {
                script {
                    sh"""
                    cd micro_holamundo
                    sudo docker version
                    sudo docker login -u $DOCKER_USER -p $DOCKER_PASSWORD
                    sudo docker build -t $DOCKER_USER/micro_holamundo:3.0 .
                    sudo docker push $DOCKER_USER/micro_holamundo:3.0
                    """
                    echo '---------------------image succesfull in dockerHub----------------------------'
                }
            }
        }
        
 ///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////        
       
        
    }
}
