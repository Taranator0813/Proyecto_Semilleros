pipeline {
    agent any
    tools {
        gradle 'Gradle 7.5.1' 
        dockerTool 'Docker 20.10.21'
     }
    stages {
        
        stage('Checkout'){
	steps{
		echo "------------>Checkout<------------"
		checkout([
			$class: 'GitSCM', 
			branches: [[name: '*/master']], 
			doGenerateSubmoduleConfigurations: false, 
			extensions: [], 
			gitTool: 'Default', 
			submoduleCfg: [], 
			userRemoteConfigs: [[
				url:'https://github.com/Taranator0813/Proyecto_Semilleros.git'
				]]
			])
		}
	}

        
        stage('Build') {
            steps {
                script{
                sh """
                ls -la
                cd micro_holamundo
                ls -la
                gradle build
               """
                }
            }
        }
        stage('test') {
            steps {
                //sh 'gradle docker'
                echo 'test succesfull'
            }
        }
        stage('Build Docker Image') {
            steps {
                sh"""
                cd micro_holamundo
                docker build -t micro_holamundo:1.0 .
                docker images
                docker login -u $DOCKER_USER -p $DOCKER_PASSWORD
               """
            
            }
        }
        stage('Push Docker Image') {
            steps {
               
                echo 'succesfull'
            }
        }
    }
}
