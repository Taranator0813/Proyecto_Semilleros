                    -Dsonar.host.url=http://192.168.7.155:9000 \
                    -Dsonar.login=6146c323d0243736f2878415044ed6d2aeaa7d96
                   """
                    }
                }     
            }
        }
        
///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
       


        stage('Build and Push Docker Image') {
            agent {
               label "slave"
            } 
            steps {
                script {
                    sh"""
                    cd micro_holamundo
                    sudo docker version
                    java --version
                    sudo docker login -u estefaniam -p dckr_pat_Mcue9uG-rCjdzWfAD9WfcQJu3Sw
                    sudo docker build -t estefaniam/micro_holamundo:1.0 .
                    sudo docker push estefaniam/micro_holamundo:1.0
                    """
                    echo '---------------------image succesfull in dockerHub----------------------------'
                }
            }
        }
        
 ///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////        
        stage('Deployment') {
            steps {
                script{
                sh """
                az login --service-principal --username 915448ca-60b9-42fc-9186-ec5ec0e0999d --password 6Fh8Q~mDu107bhiDSCjjQGgxF-G2You_UqsP0bzs --tenant 6d9df840-09c6-4033-8e44-3106589f23d6
                az account set --subscription 0de38cb9-a6f3-4122-9a42-d0cef7adf45a
