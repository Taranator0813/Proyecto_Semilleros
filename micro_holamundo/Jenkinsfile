pipeline {
    agent any
    tools {
        gradle 'Gradle 7.5.1' 
        dockerTool 'Docker 20.10.21'
     }
    stages {
        
        stage('Clean') {
         steps{
            sh 'chmod +x ./micro_holamundo/gradlew'
            sh './micro_holamundo/gradlew --b ./micro_holamundo/build.gradle clean'
         }
        }
        
        stage('Build') {
            steps {
                script{
                sh """
                ls -la
                cd micro_holamundo
                ls -la
                gradle build
               """
                }
            }
        }
        stage('test') {
            steps {
                //sh 'gradle docker'
		sh './gradlew clean'
		echo "------------>compile & Unit Tests<------------"
		sh 'chmod +x gradlew'
		sh './gradlew --b ./build.gradle test'
                echo 'test succesfull'
            }
        }
        stage('Build Docker Image') {
            steps {
                	echo "------------>Build<------------"
			//Construir sin tarea test que se ejecutÃ³ previamente
			sh './microservicio/gradlew --b ./microservicio/build.gradle build -x test'
                
                //sh"""
                //cd micro_holamundo
                //docker build -t micro_holamundo:1.0 .
                //docker images
                //docker login -u $DOCKER_USER -p $DOCKER_PASSWORD
               //"""
            
            }
        }
        stage('Push Docker Image') {
            steps {
               
                echo 'succesfull'
            }
        }
    }
}
